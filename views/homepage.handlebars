<h2>Homepage</h2>

{{#each posts as |post| }}
<div class="row align-center mb-5">
  <div class="col-md-6">
    <h2>{{post.title}}</h2>
  </div>
  <div class="col-md-6">
    <h3>{{post.content}}</h3>
  </div>
  <h4>By user {{user.user}}</h4>
  <h4>Date created: {{post.creationDate}}</h4>
</div>
{{/each}}