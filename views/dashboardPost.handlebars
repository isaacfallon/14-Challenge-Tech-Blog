{{> post-details posts}}

<div class="comment-form">
    <form class="editPost-form">
        <div class="subtitle">
            <h3>Edit or delete this post below:</h3>
        </div>
        <div class="input-container ic1">
            <input type="text" class="input" id="blogTitle" value="{{posts.title}}">
        </div>
        <div class="input-container ic2">
            <input type="text" class="input" id="blogContent" value="{{posts.content}}">
        </div>
        <button id=" editPostButton" class="btn btn-primary" type="submit">Edit post</button>
        <button id="deletePostButton" class="btn btn-primary">Delete post</button>
    </form>
</div>

<script src="/js/postEdit.js"></script>