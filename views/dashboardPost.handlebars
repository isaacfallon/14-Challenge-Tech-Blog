{{> post-details posts}}

<h3>Edit or delete this post below:</h3>

<form class="form editPost-form">
    <input type="text" id="blogTitle" value="{{posts.title}}">
    <input type="text" id="blogContent" value="{{posts.content}}">
    <button id=" editPostButton" class="btn btn-primary" type="submit">Edit post</button>
    <button id="deletePostButton" class="btn btn-primary">Delete post</button>
</form>

<script src="/js/postEdit.js"></script>